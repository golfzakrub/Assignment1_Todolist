# Create GUI
frame_notes = tkinter.Frame(root)
frame_notes.pack()

listbox_note = tkinter.Listbox(frame_notes, height=20, width=50)
listbox_note.pack(side=tkinter.LEFT)

scrollbar_notes = tkinter.Scrollbar(frame_notes)
scrollbar_notes.pack(side=tkinter.RIGHT, fill=tkinter.Y)

listbox_note.config(yscrollcommand=scrollbar_notes.set)
scrollbar_notes.config(command=listbox_note.yview)

entry_note = tkinter.Entry(root, width=50)
entry_note.pack()

todolist1 = tkinter.IntVar()
tkinter.Checkbutton(variable=todolist1).pack()

