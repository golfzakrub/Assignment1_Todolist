button_add_note = tkinter.Button(root, text="Add Note", width=48, command=add_note)
button_add_note.pack()

button_delete_note = tkinter.Button(root, text="Delete Note", width=48, command=delete_note)
button_delete_note.pack()

button_load_notes = tkinter.Button(root, text="Load Notes", width=48, command=load_notes)
button_load_notes.pack()

button_save_notes = tkinter.Button(root, text="Save Notes", width=48, command=save_notes)
button_save_notes.pack()

root.mainloop()
