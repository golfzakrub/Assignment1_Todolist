import tkinter
import tkinter.messagebox
import tkinter.colorchooser
import json

root = tkinter.Tk()
root.title("To-Do List ")



def add_note():
    note = entry_note.get()
    if note != "":
        listbox_note.insert(tkinter.END, note)
        entry_note.delete(0, tkinter.END)
    else:
        tkinter.messagebox.showwarning(title="Warning!", message="You must enter a note.")

def delete_note():
    try:
        note_index = listbox_note.curselection()[0]
        listbox_note.delete(note_index)
    except:
        tkinter.messagebox.showwarning(title="Warning!", message="You must select a note.")

def load_notes():
    try:
        with open('data.json','r') as data_file:
            data_loaded = json.load(data_file)
        listbox_note.delete(0, tkinter.END)
        for note in data_loaded:
            listbox_note.insert(tkinter.END, note)
    except:
        tkinter.messagebox.showwarning(title="Warning!", message="Cannot find data.json")

def save_notes():
    notes = listbox_note.get(0, listbox_note.size())
    with open('data.json', 'w') as data_file:
        json.dump(notes, data_file)


# def edit():

def exit():
    root.destroy()

def selectcolor():
    color = tkinter.colorchooser.askcolor()
    Labeltest  = tkinter.Label(root,text="work1",bg=color[1]).pack()

def openNewWindow():
     
    # Toplevel object which will
    # be treated as a new window
    newWindow = Toplevel(master)
 
    # sets the title of the
    # Toplevel widget
    newWindow.title("New Window")
 
    # sets the geometry of toplevel
    newWindow.geometry("400x200")
 
    # A Label widget to show in toplevel
    Label(newWindow,text ="This is a new window").pack()

